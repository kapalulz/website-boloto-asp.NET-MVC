@model MyGuild.Models.User
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя-сервер "Игрового Персонажа"</dt>

        <dd>
            @Html.DisplayFor(model => model.Name)-@Html.DisplayFor(model => model.Server)
        </dd>

        <dt>Специализация</dt>
        <dd>
            @Html.DisplayFor(model => model.Specialization)
        </dd>


        <dt>Логи</dt>
        <dd>
            @Html.DisplayFor(model => model.Logs)
        </dd>

        <dt>Доп.инфа</dt>
        <dd>
            @Html.DisplayFor(model => model.Additionalinfo)
        </dd>

    </dl>
    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>